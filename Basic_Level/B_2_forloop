//Factorial of a number
#include<stdio.h>
int main(){
    int num,fact;
    printf("Enter a number:");
    scanf("%d",&num);
    if(num<0){
        printf("The number is negative");
    }
    else if(num==0){
        printf("The number is zero so the factorial is 1");
    }
    else if (num>0){
        fact=1;
        for (int i=num;i>0;i--){
            fact=fact*(i);
        }
        printf("the factorial of a number is %d",fact);
    }
    else {
        printf("invalid");
    }
    
}
